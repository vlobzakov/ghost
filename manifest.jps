version: 1.5
appVersion: 2.10.0
type: install
name: Ghost
baseUrl: https://raw.githubusercontent.com/vlobzakov/ghost/master
logo: /images/ghost-white.png
homepage: https://ghost.org/

categories:
- apps/content-management

description: 
  text: Ghost is a fully open source, adaptable platform for building and running a modern online publication.
  short: The professional publishing platform

success: |-
  Your open source blog platform is ready to use. To add custom domain name for your Ghost installation follow the steps described in our [documentation](http://docs.jelastic.com/custom-domains).
  
globals:
  configPath: /home/jelastic/ROOT/core/server/config
  defaultConfig: /home/jelastic/ROOT/core/server/config/defaults.json
  configDevelopment: /home/jelastic/ROOT/core/server/config/env/config.development.json
  configProduction: /home/jelastic/ROOT/core/server/config/env/config.production.json
  
nodes:
- cloudlets: 18  
  nodeType: nodejs  
- cloudlets: 8  
  nodeType: mysql

onInstall:
- deployArchive
- createDb
- deployHomeDir
- restartNodes [cp]    

actions:
  deployArchive:
    deploy:
      name: Ghost-2.10.0.zip
      context: ROOT
      archive: https://github.com/TryGhost/Ghost/releases/download/2.10.0/Ghost-2.10.0.zip
      
  deployHomeDir:
    cmd [cp]:
      sed -i 's|"url":\ "http:\/\/localhost:2368",|"url":"http:\/\/${env.domain}",|g' ${globals.defaultConfig};
      sed -i 's|"host":\ "127.0.0.1",|"host":"${nodes.cp.master.intIP}",|g' ${globals.defaultConfig};
      sed -i 's|2368|8080|g' ${globals.defaultConfig};
      sed -i 's|"url":\ "http:\/\/localhost:2368",|"url":\ "http:\/\/${env.domain}",|g' ${globals.configDevelopment};
      sed -i 's|"client":\ "sqlite3",|"client":\ "mysql",|g' ${globals.configDevelopment};
      sed -i 's|"filename":\ "content\/data\/ghost-dev.db"|"host":\ "${nodes.sqldb.master.intIP}",\n"user":\ "root",\n"password":\ "${nodes.mysql.password}",\n"database":\ "ghost"|g' ${globals.configDevelopment};
      sed -i 's|127.0.0.1|${nodes.sqldb.master.intIP}|g' ${globals.configProduction};
      sed -i 's|"password"\ :\ ""|"password"\ :\ "${nodes.mysql.password}"|g' ${globals.configProduction};
      cd $HOME/ROOT;
      sudo npm install -g knex-migrator;
      knex-migrator init;
      
  createDb:
       cmd [sqldb]: mysql -uroot -p${nodes.mysql.password} -e "create database ghost"
